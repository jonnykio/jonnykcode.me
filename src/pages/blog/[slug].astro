---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import ShareButtons from "../../components/ShareButtons.astro";
import ImageLightbox from "../../components/ImageLightbox.astro";
import { Image } from "astro:assets";

export async function getStaticPaths() {
  const posts = await getCollection("posts");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
const { title, description, date, coverImage, tags } = post.data;

const formattedDate = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});

// Construct canonical URL
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<Layout title={`${title} - Jonnykcode`} description={description}>
  <article class="max-w-4xl mx-auto py-16">
    <div class="mb-16 border-b-[6px] border-black dark:border-white pb-12">
      <div class="flex gap-4 mb-6">
        {
          tags.map((tag) => (
            <span class="text-xs font-black uppercase tracking-widest border-2 border-black dark:border-white px-3 py-1 mono">
              {tag}
            </span>
          ))
        }
      </div>
      <h1
        class="text-5xl md:text-8xl font-black uppercase tracking-tightest mb-6 leading-[0.9] font-serif italic"
      >
        {title}
      </h1>
      <div class="flex items-center gap-4 mono text-sm font-bold opacity-60">
        <time datetime={date.toISOString()}>
          [{formattedDate}]
        </time>
        <span>/</span>
        <span>BY JONNY</span>
      </div>
    </div>

    {
      coverImage && (
        <div class="mb-16 border-[4px] border-black dark:border-white p-2 bg-white dark:bg-black">
          <Image
            src={coverImage}
            alt={title}
            width={1200}
            height={675}
            widths={[400, 800, 1200]}
            sizes="(max-width: 800px) 100vw, 800px"
            format="webp"
            class="w-full h-auto grayscale brightness-90 contrast-125"
            loading="eager"
          />
        </div>
      )
    }

    <div class="prose prose-xl dark:prose-invert prose-ink max-w-none">
      <Content />
    </div>

    <div class="mt-20 pt-10 border-t-[4px] border-black dark:border-white">
      <ShareButtons
        url={canonicalURL}
        title={title}
        description={description}
      />
    </div>
  </article>

  <ImageLightbox />
</Layout>

<style is:global>
  .prose-ink {
    --tw-prose-body: var(--ink);
    --tw-prose-headings: var(--ink);
    --tw-prose-links: var(--ink);
    --tw-prose-bold: var(--ink);
    --tw-prose-counters: var(--ink);
    --tw-prose-bullets: var(--ink);
    --tw-prose-hr: var(--ink);
    --tw-prose-quotes: var(--ink);
    --tw-prose-quote-borders: var(--ink);
    --tw-prose-captions: var(--ink);
    --tw-prose-code: var(--ink);
    --tw-prose-pre-code: var(--paper);
    --tw-prose-pre-bg: var(--ink);
    --tw-prose-th-borders: var(--ink);
    --tw-prose-td-borders: var(--ink);
  }

  .prose img {
    filter: grayscale(1) contrast(1.1);
    border: 4px solid var(--ink);
    padding: 4px;
  }

  .prose p {
    line-height: 1.8;
    font-weight: 500;
  }

  .prose h2,
  .prose h3 {
    text-transform: uppercase;
    font-style: italic;
    margin-top: 2em;
  }

  .tracking-tightest {
    letter-spacing: -0.05em;
  }
</style>
